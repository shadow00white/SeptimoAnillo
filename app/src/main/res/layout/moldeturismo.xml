<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/nombreturismo"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Rafting Reserva Natural  Rio claro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintVertical_bias="0.05"
        />

    <ImageView
        android:id="@+id/turismo1"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/nombreturismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/rafting"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintHorizontal_bias="0.05"
        />
    <TextView
        android:id="@+id/telefonoturismo"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text=" Contacto:  311-354-01-19"
        app:layout_constraintTop_toBottomOf="@id/telefonoturismo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0."
        app:layout_constraintVertical_bias="0.6"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/reservaturismo"
        android:layout_width="00dp"
        android:layout_height="40dp"
        android:text=" Reserva : info@rioclaroreservanatural.com   "
        app:layout_constraintTop_toBottomOf="@id/reservaturismo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintVertical_bias="0.7"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/precioturismo"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:text=" Precio:   300.000 - 400.000 $"
        app:layout_constraintTop_toBottomOf="@id/precioturismo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.8"
        android:textSize="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>