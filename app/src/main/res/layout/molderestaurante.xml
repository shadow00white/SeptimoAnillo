<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <TextView
       android:id="@+id/nombrerestaurante"
       android:layout_width="200dp"
       android:layout_height="100dp"
       android:text="Restaurante: La Mulata "
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:textStyle="bold"
       app:layout_constraintHorizontal_bias="0.6"
       app:layout_constraintVertical_bias="0.04"
       android:textSize="25dp"
       />

   <ImageView
       android:id="@+id/restaurante1"
       android:layout_width="wrap_content"
       android:layout_height="250dp"
       app:layout_constraintTop_toBottomOf="@id/nombrerestaurante"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:src="@drawable/restaurante1"
       app:layout_constraintVertical_bias="0.04"
       app:layout_constraintHorizontal_bias="0.05"
       />

    <TextView
        android:id="@+id/rangoprecio"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Precio: "
        app:layout_constraintTop_toBottomOf="@id/rangoprecio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintVertical_bias="0.6"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/precio"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text=" 300.000 - 400.000 $"
        app:layout_constraintTop_toBottomOf="@id/precio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.6"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/telefono"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:text=" Contacto:"
        app:layout_constraintTop_toBottomOf="@id/telefono"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintVertical_bias="0.7"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/numerotelefono"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text=" 3245567898"
        app:layout_constraintTop_toBottomOf="@id/numerotelefono"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.7"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/platorecomendado"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:text=" Plato recomendado :  Bandeja Paisa"
        app:layout_constraintTop_toBottomOf="@id/platorecomendado"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.8"
        android:textSize="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>



